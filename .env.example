# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database/promo-indicator.db

# API Rate Limiting (optional)
YOUTUBE_API_QUOTA_LIMIT=10000

# Discord Integration
DISCORD_WEBHOOK_URL=https://canary.discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
ENABLE_VSI_REPORTS=true

# Anomaly Detection Configuration
ANOMALY_SPIKE_THRESHOLD=11.0
ANOMALY_BASELINE_DAYS=7
ANOMALY_MIN_BASELINE_DAYS=3
ANOMALY_AUTO_DETECTION_ENABLED=false
ANOMALY_RUN_ON_COLLECTION=false
