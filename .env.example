# YouTube API Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database/promo-indicator.db

# API Rate Limiting (optional)
YOUTUBE_API_QUOTA_LIMIT=10000

# Discord Integration
DISCORD_WEBHOOK_URL=https://canary.discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
ENABLE_VSI_REPORTS=true

# Google Sheets Integration (for exporting data)
# Option 1: Provide full JSON credentials as a string
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
# Option 2: Provide path to credentials file
GOOGLE_CREDENTIALS_PATH=./config/google-credentials.json
